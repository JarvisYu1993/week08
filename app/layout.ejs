<!-- mobile login -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <a class="nav__logo" href="index.html">ALOHA訂房網</a>
          <button type="button" class="btn close" data-dismiss="modal" aria-label="Close">
            <span class="material-icons">clear</span>         
           </button>
        </div>
        <div class="modal-body mb-13">
          <form class="flex-column d-flex">
            <h3 class="font__xl font-weight-bold mb-4">Login</h3> 
            <div class="form-group">
                <label class="text-gray" for="loginEmail">Email</label>
                <input type="email" class="form-control mt-1" id="loginEmail" aria-describedby="emailHelp" >
            </div>
            <div class="form-group mb-5">
                <label class="text-gray" for="loginPasswords">Passwords</label>
                <input type="password" class="form-control mt-1" id="loginPasswords" >
            </div>
            <span class="font__sm text-gray">By signing in or creating an account, you agree with our <a class="text-primary" href="#">Terms & Conditions and Privacy Statement</a></span>
            <div class="form-group form-check mt-4">
                <input type="checkbox" class="form-check-input" id="remember">
                <label class="form-check-label text-gray" for="remember">Remember me</label>
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block mb-2 mt-4">LOGIN</button>
            <div class="d-flex justify-content-center">
                <span class="font__md text-gray">Don’t have an account yet? <a class="text-primary font-weight-bold" href="#">Sign up</a></span>
            </div>
        </form>
        </div>
      </div>
    </div>
  </div>

